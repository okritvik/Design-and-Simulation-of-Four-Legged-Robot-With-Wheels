<!-- Create a joint between your robot and sensor -->
  <joint name="lidar_laser_joint" type="fixed">
  	<axis xyz= "0 0 1"/>
	<origin
		xyz="0.2 0 0"
		rpy="0 0 0" />
    <parent link="dummy_link"/>
    <child link="base_laser"/>
	
  </joint>
	

</robot>	


